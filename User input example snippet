<body>
    <div class="message-container">
        <div class="input-wrapper">
            <input 
                type="text" 
                class="message-input" 
                placeholder="Send a message"
                maxlength="3000"
                id="messageInput"
            >
            <button class="send-btn" id="sendBtn" aria-label="Send message">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 2L11 13M22 2l-7 20-4-9-9-4 20-7z"/>
                </svg>
            </button>
        </div>
        
        <div class="toolbar">
            <button class="toolbar-btn" id="attachBtn">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21.44 11.05l-9.19 9.19a6 6 0 01-8.49-8.49l9.19-9.19a4 4 0 015.66 5.66l-9.2 9.19a2 2 0 01-2.83-2.83l8.49-8.48"/>
                </svg>
                Attach
            </button>
            
            <button class="toolbar-btn" id="voiceBtn">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 1a3 3 0 00-3 3v8a3 3 0 006 0V4a3 3 0 00-3-3z"/>
                    <path d="M19 10v2a7 7 0 01-14 0v-2M12 19v4M8 23h8"/>
                </svg>
                Voice Message
            </button>
            
            <button class="toolbar-btn" id="promptsBtn">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="3" width="7" height="7" rx="1"/>
                    <rect x="14" y="3" width="7" height="7" rx="1"/>
                    <rect x="14" y="14" width="7" height="7" rx="1"/>
                    <rect x="3" y="14" width="7" height="7" rx="1"/>
                </svg>
                Browse Prompts
            </button>
            
            <span class="char-count" id="charCount">0 / 3,000</span>
        </div>
    </div>

    <script>
        const messageInput = document.getElementById('messageInput');
        const sendBtn = document.getElementById('sendBtn');
        const charCount = document.getElementById('charCount');
        const attachBtn = document.getElementById('attachBtn');
        const voiceBtn = document.getElementById('voiceBtn');
        const promptsBtn = document.getElementById('promptsBtn');

        // Update character count
        messageInput.addEventListener('input', () => {
            const count = messageInput.value.length;
            charCount.textContent = `${count.toLocaleString()} / 3,000`;
        });

        // Send message
        sendBtn.addEventListener('click', () => {
            if (messageInput.value.trim()) {
                console.log('Sending message:', messageInput.value);
                alert('Message sent: ' + messageInput.value);
                messageInput.value = '';
                charCount.textContent = '0 / 3,000';
            }
        });

        // Enter key to send
        messageInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter' && messageInput.value.trim()) {
                sendBtn.click();
            }
        });

        // Toolbar button handlers
        attachBtn.addEventListener('click', () => {
            console.log('Attach clicked');
            alert('Attach file dialog would open here');
        });

        voiceBtn.addEventListener('click', () => {
            console.log('Voice message clicked');
            alert('Voice recording would start here');
        });

        promptsBtn.addEventListener('click', () => {
            console.log('Browse prompts clicked');
            alert('Prompts browser would open here');
        });
    </script>
</body>
