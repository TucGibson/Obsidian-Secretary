<body>
    <div class="message-container">
        <div class="input-wrapper">
            <input 
                type="text" 
                class="message-input" 
                placeholder="Send a message"
                maxlength="3000"
                id="messageInput"
            >
            <button class="send-btn" id="sendBtn" aria-label="Send message">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 2L11 13M22 2l-7 20-4-9-9-4 20-7z"/>
                </svg>
            </button>
        </div>
        
        <div class="toolbar">
            <button class="toolbar-btn" id="attachBtn">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21.44 11.05l-9.19 9.19a6 6 0 01-8.49-8.49l9.19-9.19a4 4 0 015.66 5.66l-9.2 9.19a2 2 0 01-2.83-2.83l8.49-8.48"/>
                </svg>
                Attach
            </button>
            
            <button class="toolbar-btn" id="voiceBtn">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 1a3 3 0 00-3 3v8a3 3 0 006 0V4a3 3 0 00-3-3z"/>
                    <path d="M19 10v2a7 7 0 01-14 0v-2M12 19v4M8 23h8"/>
                </svg>
                Voice Message
            </button>
            
            <button class="toolbar-btn" id="reasoningBtn">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9.5 2A2.5 2.5 0 0 1 12 4.5v15a2.5 2.5 0 0 1-4.96.44 2.5 2.5 0 0 1-2.96-3.08 3 3 0 0 1-.34-5.58 2.5 2.5 0 0 1 1.32-4.24 2.5 2.5 0 0 1 1.98-3A2.5 2.5 0 0 1 9.5 2Z"/>
                    <path d="M14.5 2A2.5 2.5 0 0 0 12 4.5v15a2.5 2.5 0 0 0 4.96.44 2.5 2.5 0 0 0 2.96-3.08 3 3 0 0 0 .34-5.58 2.5 2.5 0 0 0-1.32-4.24 2.5 2.5 0 0 0-1.98-3A2.5 2.5 0 0 0 14.5 2Z"/>
                </svg>
                <select class="reasoning-select" id="reasoningSelect">
                    <option value="minimal">Minimal</option>
                    <option value="low" selected>Low</option>
                    <option value="medium">Medium</option>
                    <option value="high">High</option>
                </select>
            </button>
            
            <span class="char-count" id="charCount">0</span>
        </div>
    </div>

    <script>
        const messageInput = document.getElementById('messageInput');
        const sendBtn = document.getElementById('sendBtn');
        const charCount = document.getElementById('charCount');
        const reasoningSelect = document.getElementById('reasoningSelect');

        // Update character count
        messageInput.addEventListener('input', () => {
            const count = messageInput.value.length;
            charCount.textContent = count.toLocaleString();
        });

        // Send message
        sendBtn.addEventListener('click', () => {
            if (messageInput.value.trim()) {
                const reasoning = reasoningSelect.value;
                console.log('Sending message:', messageInput.value);
                console.log('Reasoning effort:', reasoning);
                alert(`Message: ${messageInput.value}\nReasoning: ${reasoning}`);
                messageInput.value = '';
                charCount.textContent = '0';
            }
        });

        // Enter key to send
        messageInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter' && messageInput.value.trim()) {
                sendBtn.click();
            }
        });
    </script>
</body>
